<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RechargeAppWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RechargeAppWeb.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #111111;
            color: #ffffff;
            font-family: Arial, sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: #111111 !important;
            border-bottom: 3px solid #2A2A2A;
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #bbbbbb !important;
            }

        .navbar-toggler {
            border: none;
            background: transparent;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        /* Footer */
        .footer {
            background-color: #111111;
            border-top: 3px solid #2A2A2A;
            padding: 20px 0;
            text-align: center;
        }

            .footer a {
                color: #ffffff;
                text-decoration: none;
                font-weight: bold;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: #bbbbbb;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">MobileRechargeApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Login">My Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Payment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Feedback">Feedback</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/CustomerCare">CustomerCare</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/sitemap">Sitemap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer ">
        <div class="container">
            &copy; 2025 - RechargeAppWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
